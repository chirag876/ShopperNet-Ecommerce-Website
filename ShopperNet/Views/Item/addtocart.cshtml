@model ShopperNet.Models.Items

@{
    ViewData["Title"] = "addtocart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>addtocart</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="addtocart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ItemPrice" class="control-label"></label>
                <input asp-for="ItemPrice" class="form-control" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-group">
                    
                    <button type="submit" class="btn btn-primary btn-save">Add</button>
                </div>
                <a asp-action="Index" class="back-to-list btn btn-secondary btn-back">Items Pane</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
