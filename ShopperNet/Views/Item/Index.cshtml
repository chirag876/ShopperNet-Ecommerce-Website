<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12 mb-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title d-inline">@item.Name</h5>
                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.ItemId">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12 mb-3">
                            <img src="@item.ItemImage" class="img-fluid" alt="@item.Name">
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <p class="card-text"><b>Name: </b>@item.Name</p>
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>Item Price: </b>@item.ItemPrice.</p>
                            <div class="d-flex justify-content-between">
                                @Html.ActionLink("Details", "Details", new { item.ItemId }, new { @class = "btn btn-primary mr-2" })
                                @Html.ActionLink("Add to Cart", "AddToCart", "Item", new { item.ItemId }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<style>
    /* Set the background color for the page */
body {
  background-color: #f2f7ff;
}

/* Set the background color for the card */
.card {
  background-color: #f5f5f5;
  border-radius: 15px;
  border: none;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Style the card header */
.card-header {
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
}

/* Style the card title */
.card-title {
  margin-bottom: 0;
}

/* Style the card body */
.card-body {
  padding: 20px;
}

/* Style the "Details" and "AddToCart" buttons */
.btn {
  border-radius: 30px;
  border: none;
  color: white;
  font-size: 0.9rem;
  font-weight: 500;
  padding: 10px 20px;
  margin-top: 10px;
  transition: all 0.3s;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
}

.btn-primary {
  background-color: #1abc9c;
}

.btn-primary:hover {
  background-color: #16a085;
}

.btn-secondary {
  background-color: #2c3e50;
}

.btn-secondary:hover {
  background-color: #34495e;
}


.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}


.card-text {
  margin-bottom: 10px;
}

.btn {
  font-weight: 500;
  text-transform: uppercase;
}

.btn:hover {
  opacity: 0.8;
}

.card img {
  border-radius: 5px;
  margin-bottom: 10px;
        width: 200% !important;
    }


